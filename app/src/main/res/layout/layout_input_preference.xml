<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CustomBasePreference">

    <TextView
        android:id="@+android:id/title"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정내역"
        android:textSize="15sp"
        android:textColor="@color/colorAccentBlack"/>

    <TextView
        android:id="@+android:id/summary"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="1.0.0"
        android:textColor="@color/colorAccentLightGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/new_sign"
        android:visibility="gone"
        android:layout_toLeftOf="@android:id/summary"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_highlight_box"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="wrap_content"
        android:text="NEW"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content" />
</RelativeLayout>