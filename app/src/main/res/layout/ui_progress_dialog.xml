<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_progressdialog_box"
    android:layout_gravity="center"
    android:layout_width="310dp"
    android:paddingBottom="12dp"
    android:paddingTop="18dp"
    android:paddingLeft="18dp"
    android:layout_height="wrap_content">

    <com.app.checkmoney.CustomUi.ProgressView
        android:id="@+id/progress_bar"
        android:layout_marginLeft="10dp"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:matProg_progressIndeterminate="true"
        app:matProg_fillRadius="true"
        app:matProg_barWidth="4dp"
        app:matProg_barColor="@color/colorPrimaryDark"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/message"
        android:layout_toRightOf="@id/progress_bar"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:textColor="@color/colorAccentLightGrey"
        android:textSize="16sp"
        android:text="진행중..."/>

</RelativeLayout>