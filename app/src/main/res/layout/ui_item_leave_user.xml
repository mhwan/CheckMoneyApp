<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/bg_user_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/button_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_red_box"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="퇴장"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/user_info"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/button_layout"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginBottom="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/image_default_profile" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/image_profile"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배명환"
                android:textColor="@color/colorAccentBlack"
                android:textSize="14sp" />

            <TextView
                android:layout_below="@id/user_name"
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="01050574876"
                android:textColor="@color/colorAccentLight"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>