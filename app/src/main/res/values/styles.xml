<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentGrey</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="RegisterTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="EditTextTheme">
        <!-- colorControlNormal 포커스가 안되었을때 -->
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDarkFont</item>
        <!-- colorControlActivated 포커스 되었을때 -->
    </style>

    <style name="TextLabel" parent="ThemeOverlay.AppCompat.Light">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorAccentLight</item>
        <item name="android:textSize">13sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDarkFont</item>
    </style>

    <style name="counterText">
        <item name="android:textColor">@color/colorAccentLight</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">@color/colorAccentRed</item>
    </style>

    <!-- 하단에 위치하는 커스텀 버튼용 -->
    <style name="Custom.ButtonStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_general_button</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">9dp</item>
        <item name="android:layout_marginBottom">22dp</item>
        <item name="android:layout_marginLeft">52dp</item>
        <item name="android:layout_marginRight">52dp</item>
    </style>

    <style name="CustomBasePreference">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">13dp</item>
    </style>
</resources>
